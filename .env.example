# Stock Price Movement Prediction System - Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Force CPU-only mode (recommended for most users)
# Set to empty string or remove to enable GPU
CUDA_VISIBLE_DEVICES=-1

# TensorFlow logging level (0=all, 1=info, 2=warnings, 3=errors only)
TF_CPP_MIN_LOG_LEVEL=2

# Python optimization
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200

# Web interface theme (light/dark)
STREAMLIT_THEME_BASE=light

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Default data source (yahoo/alpha_vantage/quandl)
DEFAULT_DATA_SOURCE=yahoo

# Data cache settings
ENABLE_DATA_CACHE=true
DATA_CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)

# Default data periods
DEFAULT_TRAINING_PERIOD=2y
DEFAULT_PREDICTION_PERIOD=6mo

# Data storage paths
DATA_STORAGE_PATH=data/
MODEL_STORAGE_PATH=models/

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default model settings
DEFAULT_MODEL_TYPE=lstm
DEFAULT_TASK_TYPE=classification
DEFAULT_EPOCHS=50
DEFAULT_BATCH_SIZE=32
DEFAULT_LOOKBACK_WINDOW=30
DEFAULT_N_FEATURES=30

# Model saving
SAVE_MODELS=true
MODEL_SAVE_FORMAT=h5  # h5 or keras

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Training optimization
ENABLE_EARLY_STOPPING=true
EARLY_STOPPING_PATIENCE=10
ENABLE_REDUCE_LR=true
REDUCE_LR_PATIENCE=5

# Validation settings
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.2

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Log file settings
ENABLE_FILE_LOGGING=true
LOG_FILE=logs/stock_prediction.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# API CONFIGURATION (Optional)
# =============================================================================

# Alpha Vantage API (if using as data source)
# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Quandl API (if using as data source)
QUANDL_API_KEY=your_quandl_api_key_here

# Yahoo Finance settings
YAHOO_FINANCE_TIMEOUT=30
YAHOO_FINANCE_RETRIES=3

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Database for caching (sqlite/postgresql/mysql)
DATABASE_URL=sqlite:///stock_data.db
ENABLE_DATABASE_CACHE=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Memory management
TF_FORCE_GPU_ALLOW_GROWTH=true
TF_MEMORY_GROWTH=true

# Parallel processing
N_JOBS=-1  # Use all available cores (-1) or specify number

# Cache settings
ENABLE_FEATURE_CACHE=true
ENABLE_MODEL_CACHE=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode
DEBUG_MODE=false
ENABLE_PROFILING=false

# Testing
ENABLE_TEST_MODE=false
TEST_DATA_SIZE=1000

# Flask settings (if using Flask components)
FLASK_ENV=production
FLASK_DEBUG=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session management (for web interface)
SESSION_TIMEOUT=3600  # 1 hour

# CORS settings (if deploying publicly)
ENABLE_CORS=false
ALLOWED_ORIGINS=localhost,127.0.0.1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental features
ENABLE_EXPERIMENTAL_MODELS=false
ENABLE_CRYPTO_SUPPORT=false
ENABLE_FOREX_SUPPORT=false

# UI features
ENABLE_DARK_MODE=true
ENABLE_ADVANCED_CHARTS=true
ENABLE_MODEL_COMPARISON=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Modify values as needed for your environment
# 3. Never commit .env file to version control
# 4. Use quotes for values with spaces: SETTING="value with spaces"
# 5. Boolean values: true/false (lowercase)
# 6. Comments start with # and are ignored
